	    <!-- action entreprise -->
	    
	    <record id="action_sfp_partner_entreprise" model="ir.actions.act_window">
	            <field name="name">Entreprise</field>
	            <field name="res_model">res.partner</field>
	            <field name="view_type">form</field>
